{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "lines-between-class-members": [2, "always"],
    "padding-line-between-statements": [
      2,
      {
        "blankLine": "always",
        "prev": "*",
        "next": [
          "break",
          "if",
          "try",
          "for",
          "while",
          "do",
          "switch",
          "const",
          "let",
          "var",
          "return",
          "function",
          "class"
        ]
      },
      {
        "blankLine": "always",
        "prev": [
          "if",
          "try",
          "for",
          "while",
          "do",
          "switch",
          "const",
          "let",
          "var",
          "function",
          "class"
        ],
        "next": "*"
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": ["if", "try", "for", "while", "do", "switch"]
      },
      {
        "blankLine": "any",
        "prev": ["const", "let", "var"],
        "next": ["const", "let", "var"]
      }
    ]
  }
}
